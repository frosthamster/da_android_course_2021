<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/habit_tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:text="Название привычки"/>

    <TextView
        android:id="@+id/habit_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        tools:text="Описание привычки"/>

    <TextView
        android:id="@+id/habit_tvPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        tools:text="Приоритет привычки"/>

    <TextView
        android:id="@+id/habit_tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        tools:text="Тип привычки"/>

    <TextView
        android:id="@+id/habit_tvFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        tools:text="Периодичность привычки"/>
</LinearLayout>
